@model IEnumerable<PhotoStudio.Data.tbl_User>

@{
    ViewBag.Title = "ViewUser";
}

<div class="col-md-12 col-sm-12 header-line header-line text-center bgimage pb-10" style="min-height:70vh ">
    <div class="col-sm-12  col-md-12 mt-3 mb-4">
        <h2>User Details</h2>
    </div>
   
    <div class="col-md-11 col-sm-12 row mb-5 form-background pt-4 grid-padding" style="text-align: -webkit-left">
        <div class="col-12 p-0 mb-3">
            <a class="btn btn-success pull-right" href="@Url.Action("Create New", "Create")"><i class="fa fa-plus" aria-hidden="true"></i> Add New User</a>

        </div>
        <div class="col-12 p-0">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.UserId)*@
                        User Id
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.FirstName)*@
                        First Name
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.LastName)*@
                        Last Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)                 

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ContactNum)*@
                        Contact No
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.EmailAddress)*@
                        Email Address
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>*@
                    <th>
                        @*@Html.DisplayNameFor(model => model.UserType)*@
                        User Type
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.BrachID)*@
                        Brach
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td class="pl-4">
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.DOB)*@
                    @{
                        string dob = item.DOB.ToString();
                        string[] dobParts = dob.Split(' ');
                        string firstPart = dobParts[0];
                    }
                    @firstPart
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrachID)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>*@
                <td class="text-right">
                    <a class="btn btn-secondary mr-1" href="@Url.Action("Edit", "Edit", new {  /*id=item.PrimaryKey */})"><i class="fa fa-pencil" aria-hidden="true"></i> </a>
                    |
                    <a class="btn btn-info ml-1 mr-1" href="@Url.Action("Details", "Details", new { /* id=item.PrimaryKey */ })"><i class="fa fa-file-text-o" aria-hidden="true"></i> </a>
                    |
                    <a class="btn btn-danger ml-1" href="@Url.Action("Delete", "Delete", new { /* id=item.PrimaryKey */ })"><i class="fa fa-trash-o" aria-hidden="true"></i> </a>
                </td>
            </tr>
                }

            </table>
        </div>

        </div>
    </div>
<style>
    .bgimage {
        background-image: url('../../Images/login-bg.png');
        background-size: cover;
        background-attachment: fixed;
    }
